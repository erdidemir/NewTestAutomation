{
  "$schema": "https://specflow.org/specflow-config.json",
  "bindingCulture": {
    "name": "en-US"
  },
  "language": {
    "feature": "en-US"
  },
  "generator": {
    "allowRowTests": true,
    "allowDebugGeneratedFiles": true,
    "generateAsyncTests": false,
    "allowParallelExecution": true
  },
  "runtime": {
    "missingOrPendingStepsOutcome": "Error",
    "stopAtFirstError": false
  },
  "trace": {
    "traceTimings": false,
    "minTracedDuration": "0:0:0.1",
    "listener": "TechTalk.SpecFlow.Tracing.DefaultListener, TechTalk.SpecFlow"
  },
  "allure": {
    "resultsDirectory": "allure-results",
    "reportDirectory": "allure-report"
  }
} 